    <div class="products-container">
        <% for (var i=0; i < populares.populares.length; i++) { %>
            <div class="card">
                <img src="/data/thumbs/<%= populares.populares[i].imagen %>" alt="thumb"
                    class="product-thumb">
                <div class="container">
                    <h4 class="product-name">
                        <%= populares.populares[i].nombre %>
                    </h4>
                    <p class="product-price">$ <%= populares.populares[i].precio %>
                    </p>
                </div>
            </div>
            <% } %>
    </div>
</section>