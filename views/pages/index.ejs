<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/animations.css">
    <link rel="stylesheet" href="/css/responsive.css">
    <link rel="icon" href="/img/logo-green.svg">
    <title>Nature | Productos sin ingredientes de origen animal</title>
</head>

<body>
    <%- include('../partials/_header.ejs')  %>

    <div class="slider-container">
        <img src="/img/banner_1.svg" class="slider-item" alt="banner_1">
        <img src="/img/banner_2.svg" class="slider-item" alt="banner_2">
        <img src="/img/banner_3.svg" class="slider-item" alt="banner_3">
        <div class="slider-circles">
            <div class="circle"></div>
            <div class="circle"></div>
            <div class="circle"></div>
        </div>
    </div>

    <section class="ofertas">
        <h2>NUESTRAS OFERTAS</h2>
        <img src="/img/arrow-left.svg" alt="left" id="arrow-left" class="arrows" name="left">
        <img src="/img/arrow-right.svg" alt="right" id="arrow-right" class="arrows" name="right">
        <div class="wrapper">
            <% for (var i = 0; i < ofertas.ofertas.length; i++) { %>
                <div class="card" style="display: none;">
                    <img src="/data/thumbs/<%= ofertas.ofertas[i].imagen %>" alt="thumb" class="product-thumb">
                    <p class="product-content"><%= ofertas.ofertas[i].cantidad + " " + ofertas.ofertas[i].unidad %></p>
                    <div class="container">
                        <h4 class="product-name"><%= ofertas.ofertas[i].nombre %></h4>
                        <h5 class="product-brand"><%= ofertas.ofertas[i].marca %></h5>
                        <p class="product-price">$ <%= ofertas.ofertas[i].precio %></p>
                    </div>
                </div>
            <% } %>
        </div>
    </section>

    <section class="masvendidos">
        <h2>M√ÅS VENDIDOS</h2>
        </div>
        <img src="/img/arrow-left.svg" alt="left" id="arrow-left" class="arrows" name="left">
        <img src="/img/arrow-right.svg" alt="right" id="arrow-right" class="arrows" name="right">
        <div class="wrapper">
            <% for (var i = 0; i < masvendidos.masvendidos.length; i++) { %>
                <div class="card" style="display: none;">
                    <img src="/data/thumbs/<%= masvendidos.masvendidos[i].imagen %>" alt="thumb" class="product-thumb">
                    <p class="product-content"><%= masvendidos.masvendidos[i].cantidad + " " + masvendidos.masvendidos[i].unidad %></p>
                    <div class="container">
                        <h4 class="product-name"><%= masvendidos.masvendidos[i].nombre %></h4>
                        <h5 class="product-brand"><%= masvendidos.masvendidos[i].marca %></h5>
                        <p class="product-price">$ <%= masvendidos.masvendidos[i].precio %></p>
                    </div>
                </div>
            <% } %>
        </div>
    </section>

    <%- include('../partials/_loginModal.ejs') %>
    <%- include('../partials/_productModal.ejs') %>
    <%- include('../partials/_footer.ejs') %>

    <div class="dark-layer"></div>
    <div class="loading">
        <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
    </div>
    
    <script src="/js/main.js"></script>
    <script src="/js/SlideShow.js"></script>
    <script src="/js/SearchBox.js"></script>
    <script src="/js/ModalWindow.js"></script>
    <script src="/js/ProductsSlider.js"></script>
    <script src="/js/ItemsCounter.js"></script>
</body>
</html>