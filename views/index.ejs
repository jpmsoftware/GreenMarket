<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="icon" href="/img/favicon.png">
    <title>UruMarket | vegan store</title>
</head>

<body>
    <%- include('./partials/_header.ejs')  %>

    <div class="slider-container">
        <img src="/img/banner_1.svg" alt="banner_1" class="slider-item">
        <img src="/img/banner_2.svg" alt="banner_2" class="slider-item">
        <img src="/img/banner_3.svg" alt="banner_3" class="slider-item">
        <div class="slider-circles flex fr">
            <div class="circle"></div>
            <div class="circle"></div>
            <div class="circle"></div>
        </div>
    </div>

    <section id="ofertas">
        <div class="wrapper flex fr">
            <hr class="line center-v">
            <h2>OFERTAS</h2>
            <hr class="line">
        </div>
        <img src="/img/arrow-left.svg" alt="left" id="arrow-left" class="arrows" name="left">
        <img src="/img/arrow-right.svg" alt="right" id="arrow-right" class="arrows" name="right">
        <div class="wrapper flex fr" id="content-ofertas">
            <% for (var i=0; i < ofertas.ofertas.length; i++) { %>
                <div class="card" style="display: none;">
                    <img src="/data/thumbs/<%= ofertas.ofertas[i].imagen %>" alt="thumb" class="product-thumb">
                    <p class="product-content">
                        <%= ofertas.ofertas[i].cantidad + " " + ofertas.ofertas[i].unidad %>
                    </p>
                    <div class="container fc">
                        <h4 class="product-name">
                            <%= ofertas.ofertas[i].nombre %>
                        </h4>
                        <h5 class="product-brand">
                            <%= ofertas.ofertas[i].marca %>
                        </h5>
                        <p class="product-price">$ <%= ofertas.ofertas[i].precio %>
                        </p>
                    </div>
                </div>
                <% } %>
        </div>
    </section>

    <section id="masvendidos">
        <div class="wrapper flex fr">
            <hr class="line">
            <h2>M√ÅS VENDIDOS</h2>
            <hr class="line">
        </div>
        <img src="/img/arrow-left.svg" alt="left" id="arrow-left" class="arrows" name="left">
        <img src="/img/arrow-right.svg" alt="right" id="arrow-right" class="arrows" name="right">
        <div class="wrapper flex fr" id="content-mas-vendidos">
            <% for (var i=0; i < masvendidos.masvendidos.length; i++) { %>
                <div class="card" style="display: none;">
                    <img src="/data/thumbs/<%= masvendidos.masvendidos[i].imagen %>" alt="thumb" class="product-thumb">
                    <p class="product-content">
                        <%= masvendidos.masvendidos[i].cantidad + " " + masvendidos.masvendidos[i].unidad %>
                    </p>
                    <div class="container fc">
                        <h4 class="product-name">
                            <%= masvendidos.masvendidos[i].nombre %>
                        </h4>
                        <h5 class="product-brand">
                            <%= masvendidos.masvendidos[i].marca %>
                        </h5>
                        <p class="product-price">$ <%= masvendidos.masvendidos[i].precio %>
                        </p>
                    </div>
                </div>
                <% } %>
        </div>
    </section>

    <section id="modal">
        <div style="position: relative;">
            <p class="product-content">390 mL</p>
            <img src="" alt="thumb" class="thumb-big">
        </div>
        <div class="product-info">
            <h1>Mayonesa</h1>
            <p class="product-brand">Follow your heart</p>
            <hr>
            <p class="price">$ 265</p>
            <div class="buy-panel">
                <p>Cantidad: </p>
                <input type="text" value="1" id="cantidad" maxlength="2" disabled>
                <div class="buy-controls center-v">
                    <img src="/img/plus.svg" alt="plus" id="plus">
                    <img src="/img/minus.svg" alt="minus" id="minus">
                </div>
                <button class="button" id="agregar">Agregar</button>
            </div>

        </div>
        <img src="/img/icon-close.svg" alt="icon-close" id="icon-close">
    </section>

    <div id="dark-layer"></div>

    <div class="payments">
        <img src="/img/logo-cabal.png" alt="cabal">
        <img src="/img/logo-amex.png" alt="amex">
        <img src="/img/logo-mercadopago.png" alt="mercadopago">
        <img src="/img/logo-oca.png" alt="oca">
        <img src="/img/logo-paypal.png" alt="paypal">
        <img src="/img/logo-visa.png" alt="">
        <img src="/img/logo-master.png" alt="">
    </div>

    <%- include('./partials/_footer.ejs') %>

    <script src="/js/main.js"></script>
    <script src="/js/SlideShow.js"></script>
    <script src="/js/MenuCategories.js"></script>
    <script src="/js/SearchBox.js"></script>
    <script src="/js/ModalWindow.js"></script>
    <script src="/js/ProductsSlider.js"></script>
    <script src="/js/ItemsCounter.js"></script>
</body>

</html>